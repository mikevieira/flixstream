<!DOCTYPE html>
<html>
<head>
  <title>Flixstream</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <link href="http://vjs.zencdn.net/5.11.7/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.11.7/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</head>
<body>

<!---Navbar-->
<div id ="wrap">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Flixstream", root_path, class: 'navbar-brand'%>
    </div>
 <!--Links-->
     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to  "Teach a Course", new_instructor_course_path %><span class="sr-only">(current)</span></a></li>
        <li><%= link_to "See All Courses", courses_path%></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      
      <% if user_signed_in? %>
        <li><%= link_to 'My Dashboard', dashboard_path %></li> 
        <li><%=link_to 'Log Out', destroy_user_session_path, method: :delete  %></li>
      <% else %>
        <li><%= link_to 'Sign In',new_user_session_path %></li>
        <li><%=link_to 'Sign Up',new_user_registration_path %></li>
      <% end %>

      </ul>
      </div>

  </nav>

<%if notice.present? %>
<p class="alert alert-info"><%= notice %></p>
<% end %>

<% if alert.present? %>
<p class="alert alert-danger"><%= alert %></p>
<% end %> 
<%= yield %>

<div class = "clr"></div>
<br/>
<div class= "push"></div>

  </div> <!--wrap-->

  <br class= "clr"/>

<footer>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <div class="navbar-collapse collapse" id="footer-body">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="http://mikevieira.getforge.io/">Made By Mike</a></li>
                    <li><%= link_to  "Teach a Course", new_instructor_course_path %></li>
                    <li><%= link_to 'Privacy Policy', privacy_path %></li>
                    <li><%= image_tag 'facebook.png', class: 'social-button' %></li>
                    <li><%= image_tag 'twitter.png', class: 'social-button' %></li>
                    <li><%= image_tag 'linkedin.png', class: 'social-button' %> </li>
                </ul>
            </div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#footer-body">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="footer-bar-btns visible-xs">
                    <li><a href="#" class="btn" title="History"><i class="fa fa-2x fa-clock-o blue-text"></i></a></li>
                    <li><a href="#" class="btn" title="Favourites"><i class="fa fa-2x fa-star yellow-text"></i></a></li>
                    <li><a href="#" class="btn" title="Subscriptions"><i class="fa fa-2x fa-rss-square orange-text"></i></a></li>
                </ul>
            </div>

        </div>
    </div>
</footer>
  

</body>
</html>
